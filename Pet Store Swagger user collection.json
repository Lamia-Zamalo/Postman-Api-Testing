							"// Parse request body\r",
							"let json_request = [];\r",
							"try {\r",
							"    json_request = JSON.parse(pm.collectionVariables.get(\"userBody\"));\r",
							"} catch (e) {\r",
							"    console.log(\"Request body parse error\");\r",
							"}\r",
							"\r",
							"// Parse response body\r",
							"let jsonResponse = {};\r",
							"try {\r",
							"    jsonResponse = pm.response.json();\r",
							"} catch (e) {\r",
							"    console.log(\"Response parse error\");\r",
							"}\r",
							"\r",
							"// STATUS CODE TEST\r",
							"pm.test(\"Verify response status code is 200\", function () {\r",
							"    pm.expect(pm.response.code).to.eql(200);\r",
							"});\r",
							"\r",
							"// RESPONSE BODY TESTS\r",
							"\r",
							"pm.test(\"Verify response body, type =\", function () {\r",
