							"});\r",
							"\r",
							"pm.test(\"Verify response body, message =\", function () {\r",
							"    pm.expect(jsonResponse.message).to.eql(json_request[0].id.toString());\r",
							"});\r",
							"\r",
							"// REQUEST BODY FIELD TESTS\r",
							"\r",
							"pm.test(\"Verify request body contains all required fields\", function () {\r",
							"    const req = json_request[0];\r",
							"    pm.expect(req).to.have.property(\"id\");\r",
							"    pm.expect(req).to.have.property(\"username\");\r",
							"    pm.expect(req).to.have.property(\"firstName\");\r",
							"    pm.expect(req).to.have.property(\"lastName\");\r",
							"    pm.expect(req).to.have.property(\"email\");\r",
							"    pm.expect(req).to.have.property(\"password\");\r",
							"    pm.expect(req).to.have.property(\"phone\");\r",
							"    pm.expect(req).to.have.property(\"userStatus\");\r",
							"});\r",
							"\r",
